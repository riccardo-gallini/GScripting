<UserControl x:Class="GTurtle.Surface.TurtleCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:surface="clr-namespace:GTurtle.Surface"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <surface:ZoomBorder x:Name="zoomBorder" ClipToBounds="True" Background="LightGray">
            <Border x:Name="canvasBorder" BorderBrush="Black" BorderThickness="1" Margin="2 2 2 2">
                <Canvas x:Name="drawingCanvas" Background="White">
                </Canvas>
            </Border>
        </surface:ZoomBorder>


    </Grid>
</UserControl>
